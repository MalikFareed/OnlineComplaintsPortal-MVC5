    <!-- Title  -->
    <title>Karachi Police</title>

    <!-- Favicon  -->
    <link rel="icon" href="/Content/img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href=@Url.Content("/Content/css/core-style.css")>
