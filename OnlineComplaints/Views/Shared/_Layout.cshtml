    <!-- Header Area Start -->
    <header class="header-area">
        <div class="top-header">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <!-- Breaking News Area -->
                    <div class="col-12 col-md-6">
                        <div class="breaking-news-area">
                            <h5 class="breaking-news-title">Today</h5>

                        </div>
                    </div>
                    <!-- Stock News Area -->
                    <div class="col-12 col-md-6">
                        <div class="stock-news-area">
                            <div id="stockNewsTicker" class="ticker">
                                <ul>
                                    <li>
                                        <div class="single-stock-report">
                                            <div class="stock-values">
                                                <span>Date</span>
                                            </div>
                                            <div class="stock-index ">
                                                <h4>@DateTime.Now.ToString("dd-MMM-yyyy")</h4>
                                            </div>
                                        </div>

                                    </li>
                                    <li>
                                        <div class="single-stock-report">
                                            <div class="stock-values">
                                                <span>Time</span>
                                            </div>
                                            <div class="stock-index">
                                                <h4>@DateTime.Now.ToShortTimeString()</h4>
                                            </div>
                                        </div>

                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Middle Header Area -->
        <div class="middle-header">
          
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <!-- Logo Area -->
                    <div class="col-12 col-md-4">
                        <div class="logo-area">
                            <a href="@Url.Action("Index","Home")"><img src="~/Content/img/core-img/KPlogo.png" alt="logo"></a>
                        </div>
                    </div>
                    <!-- Header Advert Area -->
                    <div class="col-12 col-md-8">
                        <div class="header-advert-area">
                            <h1><b>Karachi Police</b></h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Bottom Header Area -->
        <div class="bottom-header">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12">
                        <div class="main-menu">
                            <nav class="navbar navbar-expand-lg">
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#gazetteMenu" aria-controls="gazetteMenu" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars"></i> Menu</button>
                                <div class="collapse navbar-collapse" id="gazetteMenu">
                                    <ul class="navbar-nav mr-auto">
                                        <li class="nav-item active">
                                            <a class="nav-link fa fa-home" href="@Url.Action("Index","Home")"><b>Home</b> <span class="sr-only">(current)</span></a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link fa fa-pencil" href="@Url.Action("Create","Complains")">Register Complain</a>
                                        </li>
                                        @if ((HttpContext.Current.Session["Admin"] == null) && (HttpContext.Current.Session["User"] == null))
    {
                                    <li class="nav-item">
                                        <a class="nav-link fa fa-sign-in" href="@Url.Action("Login","Account")">Log-in</a>
                                    </li>

}
else
{
                                    <li class="nav-item">
                                        <a class="nav-link fa fa-sign-out" href="@Url.Action("Logout","Account")">Log-out</a>
                                    </li>

}

                                        <li class="nav-item">
                                            <a class="nav-link fa fa-address-book-o" href="@Url.Action("Create","Complainants")">Singn-up</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Content("~/Content/redbook.pdf")">Most Wanted</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link fa fa-book" href="@Url.Action("About","Home")">About us</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("Contact","Home")">Contact</a>
                                        </li>

                                    </ul>


                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </header>
    <!-- Header Area End -->
    <div class="text-light" >

        @RenderBody()
        <br /> <br /> <br />
