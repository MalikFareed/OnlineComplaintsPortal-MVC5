<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->  
    <link href=@Url.Content("/Template/vendor/bootstrap/css/bootstrap.min.css") rel="stylesheet">
    <!-- Custom styles for this template -->  
    <link href=@Url.Content("/Template/css/simple-sidebar.css") rel="stylesheet">

</head>
<body>  

    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="@Url.Action("Index","Home")">
                        <b>Karachi Police</b>
                    </a>

                </li>

                <li>
                    <a class="nav-link fa fa-sign-out" href="@Url.Action("Logout","Account")">>>Log-out</a>
                </li>
                <li>
                    <a href="@Url.Action("AllEmployees","Employees")">Employees</a>
                </li>
                <li>
                    <a href="@Url.Action("AllComplains","Complains")">Complains</a>
                </li>
                <li>
                    <a href="@Url.Action("AllComplainantsDetail","Complainants")">Complainants</a>
                </li>
                <li>
                    <a href="@Url.Action("AllStations","Stations")">Stations</a>
                </li>
                <li>
                    <a href="@Url.Action("AllDistricts","Districts")">Districts</a>
                </li>
                <li>
                    <a href="@Url.Action("AllPosts","Posts")">Posts</a>
                </li>
                <li>
                    <a href="@Url.Action("")">Contact</a>
                </li>
            </ul>
            <ul>
             
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">

                <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle">Toggle Menu</a>


                <div>
                    @RenderBody()
                </div>

            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="/Template/vendor/jquery/jquery.min.js"></script>
    <script src="/Template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
$("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });</script>

</body>
</html>
